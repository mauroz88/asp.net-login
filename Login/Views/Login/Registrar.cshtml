
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/Css/login.css" rel="stylesheet" />
</head>
<body>
    <div id="login">        
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="@Url.Action("Registrar","Login")" method="post">
                            <h3 class="text-center text-info">Registrarse</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Usuario:</label><br>
                                <input type="text" name="Correo" id="username" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Contraseña:</label><br>
                                <input type="text" name="Clave" id="password" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Repetir Contraseña:</label><br>
                                <input type="text" name="ConfirmarClave" id="password" class="form-control" required>
                            </div>
                            <div class="form-group mb-4">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Registrar">
                                <a href="@Url.Action("Login","Login")" class="btn btn-info btn-md">Volver a Login</a>
                            </div>

                        </form>
                        @if (@ViewData["Mensaje"] != "")
                        {
                        <div class="alert alert-danger " role="alert">
                            @ViewData["Mensaje"]
                        </div> 
                        }                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        function mialerta() {  
            alert("¡Hola..., Soy un mensaje de alerta...!");
        } 
    </script>
</body>
</html>
